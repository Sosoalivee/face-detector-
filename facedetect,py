import cv2

# Load Haar Cascade for face detection
haar_cascade = cv2.CascadeClassifier("haarcascade_frontalface_default.xml")

# Open the webcam
cam = cv2.VideoCapture(0)
cv2.namedWindow("Facerecognintion", cv2.WINDOW_NORMAL)  # Allow resizing
cv2.setWindowProperty("Facerecognintion", cv2.WND_PROP_FULLSCREEN, cv2.WINDOW_FULLSCREEN)

while True:
    ret, img = cam.read()
    
   
    # Convert to grayscale (required for face detection)
    grayImg = cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)

    # Detect faces
    faces = haar_cascade.detectMultiScale(grayImg, 1.3, 10)
    
    # Draw rectangles around detected faces
    for (x, y, w, h) in faces:
        cv2.rectangle(img, (x, y), (x + w, y + h), (0, 255, 0), 2)

    # Show the image with detected faces
    cv2.imshow("Facerecognintion", img)
    

    # Check for ESC key press (27)
    key = cv2.waitKey(10)
    if key == 27:  # ESC key to exit
        break

# Release the camera and close any OpenCV windows
cam.release()
cv2.destroyAllWindows()
